{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "HEDDFUK"
		},
		"AzureBlobStorage1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorage1'"
		},
		"AzureSqlDatabase1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSqlDatabase1'"
		},
		"HEDSalesADLGen2DL_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'HEDSalesADLGen2DL'"
		},
		"MaxMinBatchFileLS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'MaxMinBatchFileLS'"
		},
		"MaxMinSaleLS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'MaxMinSaleLS'"
		},
		"MaxMinSale_ArchiveLS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'MaxMinSale_ArchiveLS'"
		},
		"HEDSalesADLGen2DL_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://hedsadl.dfs.core.windows.net/"
		},
		"HEDSalesAZXLS_properties_typeProperties_endpoint": {
			"type": "string",
			"defaultValue": "https://hedukade.ukwest.kusto.windows.net"
		},
		"HEDSalesAZXLS_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "dbHEDSalesUK"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "HEDDFUK_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureBlobStorage1_connectionString": {
						"value": "[parameters('AzureBlobStorage1_connectionString')]"
					},
					"AzureSqlDatabase1_connectionString": {
						"value": "[parameters('AzureSqlDatabase1_connectionString')]"
					},
					"HEDSalesADLGen2DL_accountKey": {
						"value": "[parameters('HEDSalesADLGen2DL_accountKey')]"
					},
					"MaxMinBatchFileLS_connectionString": {
						"value": "[parameters('MaxMinBatchFileLS_connectionString')]"
					},
					"MaxMinSaleLS_connectionString": {
						"value": "[parameters('MaxMinSaleLS_connectionString')]"
					},
					"MaxMinSale_ArchiveLS_connectionString": {
						"value": "[parameters('MaxMinSale_ArchiveLS_connectionString')]"
					},
					"HEDSalesADLGen2DL_properties_typeProperties_url": {
						"value": "[parameters('HEDSalesADLGen2DL_properties_typeProperties_url')]"
					},
					"HEDSalesAZXLS_properties_typeProperties_endpoint": {
						"value": "[parameters('HEDSalesAZXLS_properties_typeProperties_endpoint')]"
					},
					"HEDSalesAZXLS_properties_typeProperties_database": {
						"value": "[parameters('HEDSalesAZXLS_properties_typeProperties_database')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "HEDDFUK_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'HEDDFUK_ArmTemplate_0')]"
			]
		}
	]
}